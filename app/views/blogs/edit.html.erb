<title>Ethio Design</title>
 <header id="home">
    <div class="main-nav" style="background-color: #1565c0;">
      <div class="container">
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right"> 
            <li>
          <%= link_to "HOME", root_path  %></li>     
          </ul>
        </div>
      </div>
    </div><!--/#main-nav-->
  </header>
<div class="container">
  <div class="jumbotron">
  <center>
	<div class="row">
		<div class="col s12 l8 m8 offset-l2">
			<div class="card transparent">
				<div class="card-content black-text">
					<span class="card-title">Edit Your Photo Or News</span><br><br>
					<%= form_for @blog do |f|%>		
			        	<%= f.file_field :blog_photo %> <br><br><br>
                         <%= f.text_field :blog, autofocus: true ,class: "form-control" %>
                         <br>
                     <div class="acton">
	              			<%= f.button "Update", class: "btn btn-success"%>
	            		</div>
	            	<%end%>
				</div>
			</div>
		</div>
	</div>
  </center>
  <center>
      <div class="item" >
        <div class="caption">
           <% if admin_signed_in? %>
              <%= link_to("Logout", destroy_admin_session_path, method: :delete, class: "btn btn-start " , style: "background-color: red;")%>
              <%= link_to("Back To Admin Page", ad_page_index_path,class: "btn btn-start " , style: "background-color: green;")%>
           <%end%> 
         </div>
      </div>
    </center>
</div>
</div>

