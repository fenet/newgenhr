<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style type="text/css">
  .vacancy-page .vacancy-image img {
    width: 100%;
}

.area-title h2::before,
.area-title h2::after {
   
    bottom: 0;
    content: "";
    height: 2px;
    left: 50%;
    position: absolute;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    width: 100px;
}

.area-title h2::after {
    background: #f39c12 none repeat scroll 0 0;
    height: 4px;
    width: 200px;
}


.area-title h2 {
    display: inline-block;
    font-size: 40px;
    letter-spacing: 2px;
    line-height: 1;
    padding-bottom: 20px;
    position: relative;
    text-transform: uppercase;
}
</style>

<section>
    <div class="container"> 
             <div class="row">
             <div class="heading wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
        
           <div class="col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3 col-sm-12 col-xs-12">
           <div class="area-title text-center wow fadeIn">
          <h2><b> Latest <span style="color: #1e88e5"> Vacancys </span> and <span style="color: #1e88e5"> Jobs </span></b><br>የአዳዲስ ክፍት የስራ ማስታወቂያዎች</h2>
        </div>
      </div>
      </div>
      </div>
      </div>
<section class="blog-area vacancy-page section-padding">
           <div class="row">
        <% @vacancies.each do |f|%>
          <div class="col-sm-3 col-sm-offset-1 col-xs-12 col-xs-offset-2">
            <div class="team-member wow flipInY" data-wow-duration="1000ms" data-wow-delay="300ms">
              <div class="member-image">
              <div class="vacancy-image col-xs-offset-1" style="width: 200px;height: 200px; ">
<span style="width: 200px; height: 200px;"> <%= image_tag f.vacancy_photo if f.vacancy_photo?%></span>
</div>
              </div>  
              
            </div><hr>
            <div class="member-info">
                <div class="entry-content">
            <span class="label label-info" > Vacancy Detail </span>  
            <p  style="font-size: 16px; color: black;"><%=f.vacancy_detail%> </p>
             <span class="label label-info"> Vacancy Catagory </span>
              <p  style="font-size: 16px; color: black;"><%=f.vacancy_catagory%> </p>
             <span class="label label-info"> Vacancy Location </span>
              <p  style="font-size: 16px; color: black;"><%=f.vacancy_location%> </p>
              <span class="label label-info"> Posted On </span>
              <p  style="font-size: 13px; color: black;"><%=f.created_at %> </p>
            </div>
              </div><hr>
              <% if admin_signed_in? %>
                <%= link_to("Edit",  edit_vacancy_path(f.id))%>
                 <%= link_to "Delete", f, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger" %>
               <%end%> 
        </div>
    <%end%>
 </div>
  </section>    
      
<center>
<%= will_paginate @vacancies %>
</center>

      <br></br>
  <div class="row">
    <center>
      <div class="item" >
        <div class="caption">
           <% if admin_signed_in? %>
              <%= link_to("Logout", destroy_admin_session_path, method: :delete, class: "btn btn-start " , style: "background-color: red;")%>
              <%= link_to("Back To Admin Page", ad_page_index_path,class: "btn btn-start " , style: "background-color: green;")%>
              <%= link_to("Add another Vacancy", new_vacancy_path,class: "btn btn-start " , style: "background-color: blue;")%>
           <%end%> 
         </div>
      </div>
    </center>
   </div>
</section>


